# {{{ cd

alias ..='cd ..'
alias cd..='cd ..'
alias cd...='cd ../..'
alias cd....='cd ../../..'
alias cd.....='cd ../../../..'
#alias cd/='cd /'

alias 1='cd -'
alias 2='cd +2'
alias 3='cd +3'
alias 4='cd +4'
alias 5='cd +5'
alias 6='cd +6'
alias 7='cd +7'
alias 8='cd +8'
alias 9='cd +9'

cd () {
  if   [[ "x$*" == "x..." ]]; then
    cd ../..
  elif [[ "x$*" == "x...." ]]; then
    cd ../../..
  elif [[ "x$*" == "x....." ]]; then
    cd ../../..
  elif [[ "x$*" == "x......" ]]; then
    cd ../../../..
  else
    builtin cd "$@"
  fi
}

alias d='dirs -v | head -10'
alias ...='cd ../..'
alias ....='cd ../../..'
alias -- -='cd -'

# }}}
# {{{ misc

alias md='mkdir -p'
alias rd=rmdir

# mkdir & cd to it
function mcd() { 
  mkdir -p "$1" && cd "$1"; 
}

alias llip='last | grep pts | cut -c 23-36 | sort -u'
alias root='sudo -i'
if [[ $OSTYPE != darwin* ]]; then
  alias df='df --human-readable -T'
else
  alias df='df -H'
fi
alias chx='chmod +x $*'

if [[ $OSTYPE != darwin* ]]; then
	alias rawsm="kill -1 `pidof awesome`"
fi

alias v="nvim"
alias sv="sudo nvim"
alias e="emacs -nw"
alias se="sudo emacs -nw"
alias vssh="v ~/.ssh/config"

# from zsh
